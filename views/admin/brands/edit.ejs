<%- include('../../partials/header.ejs') %> <%-
include('../../partials/homenavbar.ejs') %>

<div class="container">
  <h3 style="margin-left: 20px">
    <span class="glyphicon glyphicon-user"></span> Alterar Marca
  </h3>
  <form method="post" action="/brands/update">
    <input type="hidden" value="<%= brands.id %>" name="id" />
    <div class="form-group col-md-6">
      <label>Nome</label>
      <input
        type="text"
        class="form-control"
        autofocus
        name="title"
        style="background-color: rgb(241, 180, 101); font-weight: bold"
        value="<%= brands.title %>"
      />
    </div>

    <div class="row"></div>

    <div class="form-group col-md-1">
      <button class="btn btn-danger">
        <span class="glyphicon glyphicon-ok"></span> Salvar
      </button>
    </div>
    <div class="form-group col-md-1">
      <a href="/admin/brands" class="btn btn-success"
        ><span class="glyphicon glyphicon-circle-arrow-left"></span> Voltar</a
      >
    </div>
  </form>
</div>

<%- include('../../partials/footer.ejs') %>
