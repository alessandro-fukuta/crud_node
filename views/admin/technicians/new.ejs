<%- include('../../partials/header.ejs') %> <%-
include('../../partials/homenavbar.ejs') %>

<div class="container">
  <hr />
  <div class="card">
    <div class="card-header bg-light">
        <h3 style="margin-left:20px;"> <span class="glyphicon glyphicon-user"></span> Novo Técnico</h3>
   
    </div>
    <div class="card-body">
      <form method="post" action="/technicians/save">
        <div class="row"></div>
        <div class="col-md-6">
          <label for="">Nome do Técnico</label>
          <input
            type="text"
            name="nome"
            placeholder="nome completo"
            required
            class="form-control"
          />
        </div>
        <br />
        <div class="row">
          <br />
        </div>
        <div class="col-md-2">
          <label for="">Celular</label>
          <input
            type="text"
            name="celular"
            id="celular"
            required
            class="celular form-control"
            style="text-align: right"
          />
        </div>
        <br />

        <div class="row"></div>
            <div class="col-md-2">
                <input type="checkbox" name="ativo" checked>
                <label for="">Ativo</label>
            </div>
        <br />

        <div class="row"></div>

        <div class="form-group col-md-1">
          <button class="btn btn-danger">
            <span class="glyphicon glyphicon-ok"></span> Salvar
          </button>
        </div>

        <div class="form-group col-md-1">
          <a href="/admin/technicians" class="btn btn-success">
            <span class="glyphicon glyphicon-circle-arrow-left"></span>
            Voltar</a
          >
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>
