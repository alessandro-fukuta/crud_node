<%- include('../../partials/header.ejs') %> <%-
include('../../partials/homenavbar.ejs') %>

<div class="container">
  <hr />
  <div class="card">
    <div class="card-header bg-light">
      <h2>Cadastro de Categorias</h2>
    </div>
    <div class="card-body">
      <form method="post" action="/categories/update">
        <input type="hidden" value="<%- category.id %>" name="id" />
        <div class="row"></div>
        <div class="col-md-6">
          <label for="">TÃ­tulo da Categoria</label>
          <input
            type="text"
            name="title"
            placeholder="titulo da categoria"
            style="background-color: rgb(241, 180, 101); font-weight: bold"
            required
            class="form-control"
            value="<%- category.title %>"
          />
        </div>
        <br />
        <div class="row">
          <br />
        </div>
        <div class="col-md-2">
          <label for="">Mensalidade R$</label>
          <input
            type="text"
            name="mensalidade"
            id="mensalidade"
            style="background-color: rgb(243, 223, 197); font-weight: bold; text-align: right;"
            required
            class="money2 form-control"
            style="text-align: right"
            value="<%- category.mensalidade %>"
          />
        </div>
        <br />

        <div class="row"></div>

        <br />

        <div class="form-group col-md-1">
          <button class="btn btn-danger">
            <span class="glyphicon glyphicon-ok"></span> Salvar
          </button>
        </div>

        <div class="form-group col-md-1">
          <a href="/admin/categories" class="btn btn-success">
            <span class="glyphicon glyphicon-circle-arrow-left"></span>
            Voltar</a
          >
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>
